<?php if($post->ordertype == 'desc'): ?>
    <?php $ik=count($entrys) ?>
<?php elseif($post->ordertype == 'asc'): ?>
    <?php $ik=1 ?>
<?php endif; ?>
<?php foreach($entrys as $key => $entry): ?>
    <section class="entry" id="section_<?php echo e($entry->order); ?>" entry="<?php echo e($entry->id); ?>">

        <?php if($entry->type=='poll'): ?>

            <div class="option-selection">
                <?php if(!Auth::check()): ?>
                    <a class=""  href="<?php echo e(url('/login')); ?>" rel="get:Loginform">
                  <?php else: ?>
                       <?php if($entry->vote()->VoteOnPost()->first()): ?>
                             <a class="active" href="#ok">
                       <?php else: ?>

                            <?php if($post->pollvotes()->currentUserHasVoteOnPost($post->id)->get()->first()): ?>

                                <a class="off" href="#ok">

                                <?php else: ?>

                                <a class="postable" data-method="Post" data-target="post-body" href="<?php echo e(action('PollController@VoteAPoll', [$post->type, $post->slug , $post->id , 'vote' => $entry->id] )); ?>" rel="nofollow">

                            <?php endif; ?>
                       <?php endif; ?>
                    <?php endif; ?>
                    <h4 class="option-sel">
                        <i class="fa fa-square-o"></i>
                        <?php echo e($entry->title); ?>

                    </h4>
                    <?php if(Auth::check() and $post->pollvotes()->currentUserHasVoteOnPost($post->id)->get()->first()): ?>
                    <div class="meta">
                        Vote: <?php echo e($entry->vote()->count()); ?>

                    </div>
                    <?php endif; ?>
                </a>
            </div>

        <?php else: ?>
            <?php if($entry->title): ?>
                <h2 class="sub-title" >
                    <?php if($post->ordertype == 'desc'): ?>
                        <?php echo e($ik); ?>.
                        <?php $ik=$ik-1 ?>
                    <?php elseif($post->ordertype == 'asc'): ?>
                        <?php echo e($ik); ?>.
                        <?php $ik=$ik+1 ?>
                    <?php endif; ?>
                    <?php echo e($entry->title); ?>

                </h2>
            <?php endif; ?>
        <?php endif; ?>
        <?php if($entry->type=='image'): ?>
            <div class="media">
                <div class="sharemedia">

                    <div class="external-sign-in">
                        <a href="http://pinterest.com/pin/create/link/?url=<?php echo e(Request::url()); ?>&media=<?php echo e(makepreview($entry->image, null, 'entries')); ?>&description=<?php echo e(isset($entry->title) ? $entry->title : $post->title); ?>" class="Pinterest popup-action mini"></a>
                        <a href="https://facebook.com/sharer.php?u=<?php echo e(Request::url()); ?>&s=100"  class="Facebook popup-action mini"></a>
                        <a href="https://twitter.com/intent/tweet?url=<?php echo e(Request::url()); ?>"  class="Twitter popup-action mini"></a>
                    </div>
                </div>
                <a id="" class="gif-icon-a"><img class="img-responsive" style="display: block;<?php if($entry->type=='image'): ?>width:100%<?php endif; ?>" alt="<?php echo e($entry->title); ?>" src="<?php echo e(makepreview($entry->image, null, 'entries')); ?>"></a>
                <small><?php echo $entry->source; ?></small>
            </div>
        <?php endif; ?>

        <?php if($entry->type=='video' or $entry->type=='embed'): ?>
            <?php echo $entry->video; ?>

        <?php endif; ?>

        <p>
            <?php echo $entry->body; ?>

        </p>
    </section>
<?php endforeach; ?>

<p></p>
