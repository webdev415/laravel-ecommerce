<?php if($post->type=='quiz'): ?>

    <?php echo $__env->make('_particles._lists.quizentrylist', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

<?php else: ?>

    <?php foreach($entrys as $key => $entry): ?>

    <section class="entry" id="section_<?php echo e($entry->order); ?>" entry="<?php echo e($entry->id); ?>">

        <?php if($entry->type=='poll'): ?>


            <?php if($entry->video=='' or $entry->video==NULL): ?>
            <?php echo $__env->make('_particles._lists.pollslistold', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
            <?php else: ?>
            <?php echo $__env->make('_particles._lists.pollslist', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
            <?php endif; ?>

        <?php else: ?>

                <?php if($entry->title): ?>
                    <h2 class="sub-title" >

                            <?php if($post->ordertype != ''): ?>
                                <?php echo e($entry->order+1); ?>.
                             <?php endif; ?>

                        <?php echo e($entry->title); ?>

                    </h2>
                <?php endif; ?>

                <?php if($entry->type=='image'): ?>
                    <div class="media">
                        <div class="sharemedia">
                            <?php echo $__env->make('._particles.others.entrysharebuttons', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
                        </div>
                        <a id="" class="gif-icon-a"><img class="img-responsive" style="display: block;<?php if($entry->type=='image'): ?>width:100%<?php endif; ?>" alt="<?php echo e($entry->title); ?>" src="<?php echo e(makepreview($entry->image, null, 'entries')); ?>"></a>
                        <small><?php echo $entry->source; ?></small>
                    </div>
                <?php endif; ?>

                <?php if($entry->type=='video' or $entry->type=='tweet' or $entry->type=='facebookpost' or $entry->type=='embed' or $entry->type=='soundcloud'): ?>

                        <?php if($entry->type=='facebookpost'): ?>
                            <div class="fb-post" data-href="<?php echo $entry->video; ?>" data-width="100%"></div>

                        <?php elseif(strpos($entry->video, 'facebook')): ?>
                       <div id="<?php echo $entry->id; ?>" class="fb-video" data-href="<?php echo $entry->video; ?>" style="max-height: 360px;"><div class="fb-xfbml-parse-ignore"></div></div>

                        <?php else: ?>
                            <?php echo $entry->video; ?>

                        <?php endif; ?>
                <?php endif; ?>
                <?php if( $entry->type=='instagram'): ?>

                    <div class='embed-containera'>
                          <iframe id="instagram-embed-<?php echo e($entry->order); ?>" src="<?php echo $entry->video; ?>embed/captioned/?v=5" allowtransparency="true" frameborder="0" data-instgrm-payload-id="instagram-media-payload-<?php echo e($entry->order); ?>" scrolling="no" style="border: 0; margin: 1px; max-width: 658px; width: calc(100% - 2px); border-radius: 4px; box-shadow: rgba(0, 0, 0, 0.498039) 0px 0px 1px 0px, rgba(0, 0, 0, 0.14902) 0px 1px 10px 0px; display: block; padding: 0px; background: rgb(255, 255, 255);"></iframe>
                          <script src="//platform.instagram.com/en_US/embeds.js"></script>
                    </div>

                <?php endif; ?>


                 <p>
                    <?php echo $entry->body; ?>

                </p>
                 <?php if( $entry->type=='text'): ?>
                <small><?php echo $entry->source; ?></small>
                 <?php endif; ?>
                <div class="clear"></div>

        <?php endif; ?>
    </section>

    <?php if($key==1 and count($entrys) > 3): ?>
        <?php foreach(\App\Widgets::where('type', 'Post2nd3rdentry')->where('display', 'on')->get() as $widget): ?>
            <?php echo $widget->text; ?>

        <?php endforeach; ?>
    <?php endif; ?>


    <?php endforeach; ?>

<?php endif; ?>

<?php if(isset($post->pagination) and $post->pagination!=null): ?>
   <ul class="postpage">

   <?php if($entrys->currentPage()!=1): ?><a href="<?php echo e($entrys->previousPageUrl()); ?>" class="button button-big button-blue pull-l "><?php echo e(trans('pagination.previous')); ?></a><?php endif; ?>
       <?php if($entrys->currentPage()!=$entrys->lastPage()): ?><a href="<?php echo e($entrys->nextPageUrl()); ?>"  class="button button-big button-blue pull-r"><?php echo e(trans('pagination.next')); ?></a><?php endif; ?>

 </ul>

<?php endif; ?>